﻿
@model IEnumerable<AptitudeTest.WebApp.Models.Exam>
@{
    ViewData["Title"] = "ReadyForExam";
}

<h1>ReadyForExam</h1>

<div class="col main pt-5 mt-3">
    <div class="row mb-3">
        <div class="col-xl-3 col-sm-6 py-2">
            <!-- small box -->
            @foreach (var item in Model)
            {
                <div class="card bg-success text-white h-100">
                    <div class="card-body bg-info">
                        <h1 class="text-uppercase text-center">@item.Title</h1>
                    </div>
                    <a class="dropdown-item font-weight-bold text-center" asp-area="CANDIDATE" asp-controller="Candidate" asp-action="AttendExam" asp-route-examId="@item.Id">Take a Test</a>
                </div>
            }
        </div>
    </div>
</div>

