@model AptitudeTest.WebApp.ViewModels.LoginViewModel
@using System.Web
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link asp-append-version="true" rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <link asp-append-version="true" rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link asp-append-version="true" rel="stylesheet" href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css">
    <link asp-append-version="true" rel="stylesheet" href="~/css/adminlte.min.css">
    <link asp-append-version="true" href="~/js/jqueryconfirm/dist/jquery-confirm.min.css" rel="stylesheet" />
    <link asp-append-version="true" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body class="hold-transition login-page">


    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            @{
                TempData["Message"] = "Please wait to get Login Permision from MANAGER";
            }
            <strong>@TempData["Message"]</strong>
        </div>
    }

    @if (!string.IsNullOrEmpty(Convert.ToString(TempData["Success"])))
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-check"></i> Message! @TempData["Success"]</h5>
            @{
                TempData["Success"] = "Successfully Register new Candidate";
            }
        </div>
    }
    <div>
        <h1 class="font-weight-bold">Welcom to the Aptitude Test</h1>
    </div>
    <div class="login-box">
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sign in to start your session</p>
                <form id="account" asp-controller="Authenticate" asp-antiforgery="true" asp-action="Login" method="post">
                    <div class="input-group mb-3">
                        <input asp-for="UserName" class="form-control" placeholder="UserName" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <span class="text-danger">@Html.ValidationMessage("NameErr")</span>

                    <div class="input-group mb-3">
                        <input type="password" asp-for="Password" autocomplete="new-password" class="form-control" placeholder="Password" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <span class="text-danger">@Html.ValidationMessage("PassErr")</span>

                    <div class="row justify-content-center">
                        <div class="col-8">
                            <button type="submit" id="btnsubmit" class="btn btn-primary btn-block">Sign In</button>

                        </div>

                    </div>

                </form>

                <p class="mb-1 text-center">
                    <a asp-controller="ForgotPassword" asp-action="Recover" class="text-black-50">I forgot my password</a>
                </p>
                <p class="mb-0 text-center">
                    <a asp-controller="Authenticate" class="text-black-50" asp-action="Register">Register account</a>
                </p>
            </div>
        </div>
    </div>


</body>
</html>

<script asp-append-version="true" src="~/lib/jquery/jquery.min.js"></script>
<script asp-append-version="true" src="~/lib/boostrap/dist/js/bootstrap.bundle.min.js"></script>
<script asp-append-version="true" src="~/js/adminlte.min.js"></script>
<script asp-append-version="true" src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script asp-append-version="true" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script asp-append-version="true" src="~/js/jquery.unobtrusive-ajax.js"></script>
<script asp-append-version="true" src="~/js/jqueryconfirm/dist/jquery-confirm.min.js"></script>
<script asp-append-version="true" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script asp-append-version="true" type="text/javascript">
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


